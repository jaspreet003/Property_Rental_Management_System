@model Property_Management_System.Models.Building;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<h1>Edit Building</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BuildingId" />
    <input type="hidden" asp-for="OwnerId" />
    <div class="form-group">
        <label asp-for="BuildingId" class="control-label"></label>
        <input asp-for="BuildingId" class="form-control" readonly />
        <span asp-validation-for="BuildingId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NbFloor" class="control-label">No of floors</label>
        <input asp-for="NbFloor" class="form-control" />
        <span asp-validation-for="NbFloor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NbApartment" class="control-label">No of Appartments</label>
        <input asp-for="NbApartment" class="form-control" />
        <span asp-validation-for="NbApartment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    
        <div class="form-group">
            <label asp-for="OwnerId" class="control-label"></label>
            <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.Owners"></select>
        </div>
    
    <div class="form-group">
        <label asp-for="ManagerId" class="control-label"></label>
        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.Managers"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
