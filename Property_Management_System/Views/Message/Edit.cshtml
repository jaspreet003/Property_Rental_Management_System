@model Message

<h1>Edit Message</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MessageId" />

    <div class="form-group">
        <label asp-for="Content">Content</label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderId">Sender ID</label>
        <input asp-for="SenderId" class="form-control" readonly />
        <span asp-validation-for="SenderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverId">Receiver ID</label>
        <input asp-for="ReceiverId" class="form-control" readonly />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

