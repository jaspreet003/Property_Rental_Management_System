@model Property_Management_System.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Open Sans', sans-serif;
        }

        .image-section {
            position: absolute;
            top: 0;
            left: 0;
            width: 75%;
            height: 100%;
            background: url('/images/register.jpg') no-repeat center center fixed;
            background-size: cover;
            z-index: 1;
        }

        .blue-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 75%;
            height: 100%;
            background-color: rgba(0, 0, 255, 0.4); /* Blue overlay */
            z-index: 2;
        }

        .form-section {
            position: absolute;
            top: 0;
            right: 0;
            width: 25%;
            height: 100%;
            background: #fff;
            padding: 60px 30px; /* Adjust padding as necessary */
            z-index: 3;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-group {
            margin-bottom: 30px; /* Increased gap between fields */
        }

        .form-control {
            border: none;
            border-bottom: 2px solid #d3d3d3;
            border-radius: 0;
        }

        .form-control:focus {
                border-color: #a9a9a9;
                box-shadow: none;
            }

        label {
            font-weight: bold;
            float: left;
        }

        .btn-primary {
            background-color: blue; /* Your desired button color */
            border: none;
            width: 100%;
            padding: 10px;
            border-radius: 20px;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: blue; /* A slightly lighter pink for hover effect */
            }

        /* Add any additional styling you need here */
    </style>
</head>
<body>
    <div class="image-section"></div>
    <div class="blue-overlay"></div>
    <div class="form-section">
        <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- The Role field is hidden, so no need to include it in the form -->
            <div class="form-group">
                <label asp-for="Role">Role</label>
                <input asp-for="Role" class="form-control" value="Tenant" readonly />

            </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</body>
</html>
